{
  "name": "micro-service-task-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "build:shared": "npm run build --workspace=packages/ms-task-app-shared",
    "build:user-service": "npm run build --workspace=services/user-service",
    "build:task-service": "npm run build --workspace=services/task-service",
    "build:notification-service": "npm run build --workspace=services/notification-service",
    "start:user-service": "npm run dev --workspace=services/user-service",
    "start:task-service": "npm run dev --workspace=services/task-service",
    "start:notification-service": "npm run dev --workspace=services/notification-service"
  },
  "workspaces": [
    "/packages/ms-task-app-shared",
    "/services/user-service",
    "/services/task-service",
    "/services/notification-service"
  ],
  "dependencies": {
    "body-parser": "^2.2.1",
    "express": "^5.2.1",
    "mongoose": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
